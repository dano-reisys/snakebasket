#!/Users/neumark/git/prezi/pip-rinstall/virtualenv/bin/python
# EASY-INSTALL-ENTRY-SCRIPT: 'pip==1.1','console_scripts','pip'
import sys
from pkg_resources import load_entry_point
from rinstall import rinstall
import pip.basecommand

old_command_names = pip.basecommand.command_names
def new_command_names():
    cmds = old_command_names()
    cmds.append('rinstall')
    return cmds
#pip.basecommand.command_names = new_command_names

# Add the rinstall command module
sys.modules['pip.commands.rinstall'] = rinstall

# Fake an "rinstall" command to pip
sys.argv.insert(1,"rinstall")

# Start pip as normal
if __name__ == '__main__':
    sys.exit(
        load_entry_point('pip==1.1', 'console_scripts', 'pip')()
    )
